<Window x:Class="AIDictation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AIDictation"
        Width="400" Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="False">

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0">
                    <Button x:Name="CopyButton"
                            Style="{StaticResource IconButton}"
                            Content="ðŸ“‹"
                            Click="CopyButton_Click"
                            Visibility="Collapsed"
                            ToolTip="Copy to clipboard"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <Button Style="{StaticResource IconButton}"
                            Content="â”€"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"/>
                    <Button Style="{StaticResource IconButton}"
                            Content="âœ•"
                            Click="CloseButton_Click"
                            ToolTip="Close"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <!-- Idle State -->
                <StackPanel x:Name="IdleView"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Visible">
                    <TextBlock Text="ðŸŽ¤"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock Text="Ready to record"
                               Style="{StaticResource SecondaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>

                <!-- Recording State -->
                <StackPanel x:Name="RecordingView"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <!-- Waveform visualization -->
                    <Canvas x:Name="WaveformCanvas"
                            Width="300" Height="60"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="Recording..."
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource SecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>

                <!-- Processing State -->
                <StackPanel x:Name="ProcessingView"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <ProgressBar IsIndeterminate="True"
                                 Width="200" Height="4"
                                 Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Transcribing..."
                               Style="{StaticResource SecondaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>

                <!-- Result State -->
                <Grid x:Name="ResultView" Visibility="Collapsed" Margin="16">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="TranscriptionTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 IsReadOnly="False"
                                 BorderThickness="0"
                                 VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Grid>

                <!-- Error State -->
                <StackPanel x:Name="ErrorView"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed"
                            Margin="24">
                    <TextBlock Text="âš ï¸"
                               FontSize="32"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ErrorText"
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               Margin="0,12,0,0"/>
                    <Button Content="Try Again"
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"
                            Click="RetryButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <TextBlock Grid.Row="2"
                       x:Name="HotkeyHint"
                       Style="{StaticResource CaptionText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Press Fn to record"/>
        </Grid>
    </Border>
</Window>
