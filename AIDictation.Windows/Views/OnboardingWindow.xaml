<Window x:Class="AIDictation.Views.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIDictation Setup"
        Width="605" Height="562"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="84"/>
        </Grid.RowDefinitions>

        <!-- Progress Indicators -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20">
            <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="{StaticResource PrimaryBrush}" Margin="4"/>
            <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="{StaticResource BorderBrush}" Margin="4"/>
            <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="{StaticResource BorderBrush}" Margin="4"/>
            <Ellipse x:Name="Dot4" Width="8" Height="8" Fill="{StaticResource BorderBrush}" Margin="4"/>
            <Ellipse x:Name="Dot5" Width="8" Height="8" Fill="{StaticResource BorderBrush}" Margin="4"/>
        </StackPanel>

        <!-- Content Pages -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,0,40,20" MinHeight="400">
                <!-- Step 1: Microphone -->
                <StackPanel x:Name="Step1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŽ™ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Microphone Access"
                               Style="{StaticResource TitleText}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="AIDictation needs access to your microphone to record and transcribe your voice."
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               MaxWidth="485"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,16,0,0"/>

                    <!-- Checkmark when granted -->
                    <StackPanel x:Name="MicrophoneGrantedIndicator"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="âœ“"
                                   FontSize="64"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Permission granted"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step 2: Screen Recording (Optional) -->
                <StackPanel x:Name="Step2" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="ðŸ–¥ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Screen Recording (Optional)"
                               Style="{StaticResource TitleText}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="Enable screen recording to capture screenshots of active windows during transcription. This permission is optional."
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               MaxWidth="485"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,16,0,0"/>

                    <!-- Checkmark when granted -->
                    <StackPanel x:Name="ScreenRecordingGrantedIndicator"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="âœ“"
                                   FontSize="64"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Permission granted"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </StackPanel>

                    <!-- Optional message -->
                    <StackPanel x:Name="ScreenRecordingOptionalIndicator"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <TextBlock Text="This permission is optional"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step 3: Language Selection -->
                <StackPanel x:Name="Step3" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="ðŸŒ" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Language Selection"
                               Style="{StaticResource TitleText}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="Select the languages you want to transcribe. You can choose multiple languages."
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               MaxWidth="485"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,16,0,0"/>

                    <WrapPanel x:Name="LanguagePanel"
                               HorizontalAlignment="Center"
                               MaxWidth="485"
                               Margin="0,12,0,0">
                        <!-- Auto-detect -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="auto"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŒ " FontSize="14"/>
                                <TextBlock Text="Auto-detect" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- English -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="en"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡¬ðŸ‡§ " FontSize="14"/>
                                <TextBlock Text="English" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Spanish -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="es"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡ªðŸ‡¸ " FontSize="14"/>
                                <TextBlock Text="Spanish" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- French -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="fr"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡«ðŸ‡· " FontSize="14"/>
                                <TextBlock Text="French" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- German -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="de"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡©ðŸ‡ª " FontSize="14"/>
                                <TextBlock Text="German" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Italian -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="it"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡®ðŸ‡¹ " FontSize="14"/>
                                <TextBlock Text="Italian" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Portuguese -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="pt"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡µðŸ‡¹ " FontSize="14"/>
                                <TextBlock Text="Portuguese" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Russian -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="ru"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡·ðŸ‡º " FontSize="14"/>
                                <TextBlock Text="Russian" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Chinese -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="zh"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡¨ðŸ‡³ " FontSize="14"/>
                                <TextBlock Text="Chinese" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Japanese -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="ja"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡¯ðŸ‡µ " FontSize="14"/>
                                <TextBlock Text="Japanese" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>

                        <!-- Korean -->
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Tag="ko"
                                      Click="LanguageButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡°ðŸ‡· " FontSize="14"/>
                                <TextBlock Text="Korean" FontSize="14"/>
                            </StackPanel>
                        </ToggleButton>
                    </WrapPanel>
                </StackPanel>

                <!-- Step 4: Hotkey -->
                <StackPanel x:Name="Step4" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="âŒ¨ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Recording Hotkey"
                               Style="{StaticResource TitleText}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="Set a global hotkey to start/stop recording from anywhere."
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               MaxWidth="485"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,16,0,0"/>

                    <Border Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24,16"
                            Margin="0,24,0,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="HotkeyBox_Click">
                        <TextBlock x:Name="HotkeyDisplay"
                                   Text="Click to set hotkey..."
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>

                    <StackPanel x:Name="HotkeyGrantedIndicator"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="âœ“"
                                   FontSize="16"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,6,0"/>
                        <TextBlock Text="Hotkey set"
                                   FontSize="12"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>

                    <TextBlock Text="Tip: Ctrl+Shift+R works well"
                               Style="{StaticResource CaptionText}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Step 5: Complete -->
                <StackPanel x:Name="Step5" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="You're All Set!"
                               Style="{StaticResource TitleText}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="AIDictation is ready to use. Press your hotkey from anywhere to start recording."
                               Style="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               MaxWidth="485"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,16,0,0"/>

                    <StackPanel Margin="0,24,0,0" HorizontalAlignment="Center">
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,4">
                            <Run Text="â€¢ Hold hotkey to record"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,4">
                            <Run Text="â€¢ Release to transcribe"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,4">
                            <Run Text="â€¢ Access settings from system tray"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="3" Margin="40,0,40,24">
            <!-- Step 1: Microphone buttons -->
            <Button x:Name="MicrophoneEnableButton"
                    Content="Enable Microphone"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Click="OpenMicrophoneSettings_Click"
                    Visibility="Visible"/>
            <Button x:Name="MicrophoneContinueButton"
                    Content="Continue"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Click="NextButton_Click"
                    Visibility="Collapsed"/>

            <!-- Step 2: Screen Recording buttons -->
            <StackPanel x:Name="ScreenRecordingButtons" Visibility="Collapsed">
                <Button x:Name="ScreenRecordingEnableButton"
                        Content="Enable Screen Recording"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,12"
                        Click="OpenScreenRecordingSettings_Click"/>
                <Button x:Name="ScreenRecordingSkipButton"
                        Content="Skip for now"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Click="NextButton_Click"/>
            </StackPanel>

            <!-- Step 3: Language button -->
            <Button x:Name="LanguageContinueButton"
                    Content="Continue"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Click="NextButton_Click"
                    Visibility="Collapsed"/>

            <!-- Step 4: Hotkey button -->
            <Button x:Name="HotkeyContinueButton"
                    Content="Continue"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Click="NextButton_Click"
                    Visibility="Collapsed"/>

            <!-- Step 5: Complete button -->
            <Button x:Name="CompleteButton"
                    Content="Get Started"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Click="CompleteButton_Click"
                    Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
