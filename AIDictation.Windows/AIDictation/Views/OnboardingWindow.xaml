<Window x:Class="AIDictation.Views.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AIDictation.ViewModels"
        xmlns:converters="clr-namespace:AIDictation.Converters"
        mc:Ignorable="d"
        Title="WhisperMate Setup"
        Width="600" Height="500"
        MinWidth="600" MinHeight="500"
        MaxWidth="600" MaxHeight="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.DataContext>
        <vm:OnboardingViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StepVisibilityConverter x:Key="StepVisibilityConverter"/>
        <!-- Page indicator style -->
        <Style x:Key="PageIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Fill" Value="#CCCCCC"/>
        </Style>
        <Style x:Key="PageIndicatorActive" TargetType="Ellipse" BasedOn="{StaticResource PageIndicator}">
            <Setter Property="Fill" Value="#0078D4"/>
        </Style>

        <!-- Language button style -->
        <Style x:Key="LanguageButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#CCE4F7"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Hotkey recorder style -->
        <Style x:Key="HotkeyRecorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <Grid Grid.Row="0" Margin="40,30,40,20">
            <!-- Step 0: Microphone Permission -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=0}">
                <TextBlock Text="ðŸŽ™ï¸" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Microphone Access" FontSize="24" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="14" 
                           Foreground="#6B6B6B" MaxWidth="400" Margin="0,0,0,30">
                    WhisperMate needs access to your microphone to record and transcribe your voice.
                </TextBlock>
                <Button Content="Open Windows Settings" Padding="20,12" FontSize="14"
                        HorizontalAlignment="Center" Command="{Binding OpenMicrophoneSettingsCommand}"/>
            </StackPanel>

            <!-- Step 1: Language Selection -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}">
                <TextBlock Text="ðŸŒ" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Select Language" FontSize="24" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="14" 
                           Foreground="#6B6B6B" MaxWidth="400" Margin="0,0,0,20">
                    Choose your preferred language for transcription. You can change this later in settings.
                </TextBlock>
                <ItemsControl ItemsSource="{Binding Languages}" HorizontalAlignment="Center" MaxWidth="500">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource LanguageButton}"
                                    Command="{Binding DataContext.SelectLanguageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Flag}" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding DisplayName}" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Step 2: Hotkey Setup -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}">
                <TextBlock Text="âŒ¨ï¸" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Recording Hotkey" FontSize="24" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="14" 
                           Foreground="#6B6B6B" MaxWidth="400" Margin="0,0,0,24">
                    Set a global hotkey to start/stop recording from anywhere.
                </TextBlock>
                
                <Grid HorizontalAlignment="Center" Width="300">
                    <Border Style="{StaticResource HotkeyRecorder}"
                            MouseLeftButtonDown="HotkeyRecorder_MouseLeftButtonDown"
                            PreviewKeyDown="HotkeyRecorder_PreviewKeyDown"
                            Focusable="True">
                        <Grid>
                            <TextBlock x:Name="HotkeyText"
                                       Text="{Binding HotkeyDisplayText}"
                                       FontSize="16" FontWeight="Medium"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsRecordingHotkey, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <TextBlock Text="Press any key..."
                                       FontSize="16" FontStyle="Italic"
                                       Foreground="#6B6B6B"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsRecordingHotkey, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="âœ•" FontSize="12" Padding="6,4"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Background="Transparent" BorderThickness="0"
                                    Command="{Binding ClearHotkeyCommand}"
                                    Visibility="{Binding IsRecordingHotkey, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </Grid>

                <TextBlock Text="ðŸ’¡ Tip: Function keys (F1-F12) work best as they're rarely used by other apps."
                           FontSize="11" Foreground="#6B6B6B" TextAlignment="Center"
                           HorizontalAlignment="Center" Margin="0,16,0,0" MaxWidth="350"/>
            </StackPanel>

            <!-- Step 3: Complete -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}">
                <TextBlock Text="âœ…" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="You're All Set!" FontSize="24" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="14" 
                           Foreground="#6B6B6B" MaxWidth="400" Margin="0,0,0,24">
                    WhisperMate is ready to use. Press your hotkey from anywhere to start recording.
                </TextBlock>

                <Border Background="#F5F5F5" CornerRadius="8" Padding="24,20" MaxWidth="350">
                    <StackPanel>
                        <TextBlock Text="Quick tips:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <StackPanel Margin="8,0,0,0">
                            <TextBlock Text="â€¢ Hold hotkey to record" FontSize="13" Margin="0,0,0,6"/>
                            <TextBlock Text="â€¢ Double-tap for continuous mode" FontSize="13" Margin="0,0,0,6"/>
                            <TextBlock Text="â€¢ Access settings from system tray" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Page Indicators -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Ellipse Width="8" Height="8" Margin="4,0">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="0">
                                <Setter Property="Fill" Value="#0078D4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
            <Ellipse Width="8" Height="8" Margin="4,0">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="1">
                                <Setter Property="Fill" Value="#0078D4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
            <Ellipse Width="8" Height="8" Margin="4,0">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                <Setter Property="Fill" Value="#0078D4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
            <Ellipse Width="8" Height="8" Margin="4,0">
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Setter Property="Fill" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                <Setter Property="Fill" Value="#0078D4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
        </StackPanel>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="2" Margin="40,0,40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: Skip or Back -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Skip" Padding="16,10" FontSize="14"
                        Visibility="{Binding CanSkip, Converter={StaticResource BoolToVisibilityConverter}}"
                        Command="{Binding SkipCommand}"
                        Background="Transparent" BorderThickness="0" Foreground="#6B6B6B"/>
                <Button Content="â† Back" Padding="16,10" FontSize="14"
                        Visibility="{Binding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}"
                        Command="{Binding PreviousStepCommand}"
                        Background="Transparent" BorderThickness="0"/>
            </StackPanel>

            <!-- Right side: Next or Get Started -->
            <Button Grid.Column="1" HorizontalAlignment="Right" Padding="20,10" FontSize="14"
                    Visibility="{Binding IsLastStep, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                    Command="{Binding NextStepCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Next"/>
                    <TextBlock Text=" â†’"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" Content="Get Started" HorizontalAlignment="Right" 
                    Padding="20,10" FontSize="14"
                    Visibility="{Binding IsLastStep, Converter={StaticResource BoolToVisibilityConverter}}"
                    Command="{Binding CompleteCommand}"/>
        </Grid>
    </Grid>
</Window>
