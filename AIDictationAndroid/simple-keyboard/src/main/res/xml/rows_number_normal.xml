<!-- Gboard-style number pad layout -->
<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <!-- Row 1: + 1 2 3 % -->
    <Row>
        <Key
            latin:keySpec="+"
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keySpec="1"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="2"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="3"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="%"
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
    </Row>
    <!-- Row 2: - 4 5 6 space -->
    <Row>
        <Key
            latin:keySpec="-"
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keySpec="4"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="5"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="6"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keyStyle="numSpaceKeyStyle"
            latin:backgroundType="functional" />
    </Row>
    <!-- Row 3: * 7 8 9 backspace -->
    <Row>
        <Key
            latin:keySpec="*"
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keySpec="7"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="8"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="9"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keyStyle="deleteKeyStyle" />
    </Row>
    <!-- Row 4: ABC , !?# 0 = . enter -->
    <Row
        latin:keyWidth="14.28%p"
    >
        <Key
            latin:keyStyle="toAlphaKeyStyle" />
        <Key
            latin:keySpec=","
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keyStyle="toSymbolKeyStyle" />
        <Key
            latin:keySpec="0"
            latin:keyStyle="numKeyStyle" />
        <Key
            latin:keySpec="="
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keySpec="."
            latin:keyStyle="numKeyStyle"
            latin:backgroundType="functional" />
        <Key
            latin:keyStyle="enterKeyStyle"
            latin:keyWidth="fillRight" />
    </Row>
</merge>
