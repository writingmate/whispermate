<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false">

    <!-- Inner container positioned at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- Toolbar with suggestions and mic button -->
        <LinearLayout
            android:id="@+id/keyboard_toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingTop="4dp"
            android:background="@color/background_lxx_system"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Settings button -->
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Suggestion buttons (hidden during recording) -->
            <LinearLayout
                android:id="@+id/suggestions_container"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/suggestion_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/google_sans_flex"
                    android:textColor="@color/key_text_color_lxx_system"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <View
                    android:id="@+id/divider_1"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/key_hint_letter_color_lxx_system"
                    android:alpha="0.3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/suggestion_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/google_sans_flex"
                    android:textColor="@color/key_text_color_lxx_system"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <View
                    android:id="@+id/divider_2"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/key_hint_letter_color_lxx_system"
                    android:alpha="0.3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/suggestion_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/google_sans_flex"
                    android:textColor="@color/key_text_color_lxx_system"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

            <!-- Speak now text (shown during recording) -->
            <TextView
                android:id="@+id/speak_now_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Speak now"
                android:textSize="16sp"
                android:fontFamily="@font/google_sans_flex"
                android:textColor="@color/key_text_color_lxx_system"
                android:visibility="gone" />

            <!-- Rewrite button - shows after dictation for voice commands -->
            <TextView
                android:id="@+id/command_mic_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:text="Rewrite"
                android:textSize="13sp"
                android:fontFamily="@font/google_sans_flex"
                android:textColor="@color/key_text_color_lxx_system"
                android:background="@drawable/btn_toolbar_chip"
                android:drawableStart="@drawable/ic_command_mic"
                android:drawablePadding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <!-- Fix button - shows after dictation -->
            <TextView
                android:id="@+id/cleanup_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:text="Fix"
                android:textSize="13sp"
                android:fontFamily="@font/google_sans_flex"
                android:textColor="@color/key_text_color_lxx_system"
                android:background="@drawable/btn_toolbar_chip"
                android:drawableStart="@drawable/ic_cleanup"
                android:drawablePadding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <!-- Undo button - shows during command review -->
            <TextView
                android:id="@+id/undo_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:text="Undo"
                android:textSize="13sp"
                android:fontFamily="@font/google_sans_flex"
                android:textColor="@color/key_text_color_lxx_system"
                android:background="@drawable/btn_toolbar_chip"
                android:drawableStart="@drawable/ic_undo"
                android:drawablePadding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <com.whispermate.aidictation.ui.components.AnimatedMicButton
                android:id="@+id/mic_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice input"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Keyboard will be added here programmatically -->
        <FrameLayout
            android:id="@+id/keyboard_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
