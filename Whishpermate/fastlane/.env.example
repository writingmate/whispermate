# fastlane Environment Variables Example
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# Apple ID (your Apple Developer account email)
FASTLANE_APPLE_ID="your.email@example.com"

# App Store Connect Team ID (found in App Store Connect)
FASTLANE_ITC_TEAM_ID="123456789"

# Apple Developer Portal Team ID (already set in Appfile)
# FASTLANE_TEAM_ID="G7DJ6P37KU"

# App-Specific Password (if not using API key)
# Generate at: https://appleid.apple.com
FASTLANE_PASSWORD="your-app-specific-password"

# App Store Connect API Key (recommended over password)
# Generate in App Store Connect → Users and Access → Keys
APP_STORE_CONNECT_API_KEY_KEY_ID="YOUR_KEY_ID"
APP_STORE_CONNECT_API_KEY_ISSUER_ID="YOUR_ISSUER_ID"
APP_STORE_CONNECT_API_KEY_KEY="~/.appstoreconnect/private_keys/AuthKey_XXXXXXXXXX.p8"

# Match (Code Signing)
# Git repository for storing certificates (must be private)
MATCH_GIT_URL="git@github.com:yourorg/whispermate-certificates.git"

# Encryption password for Match
# Create a strong password and store it securely
MATCH_PASSWORD="your-strong-encryption-password"

# Optional: Slack notifications
# SLACK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Optional: Skip waiting for build processing (faster TestFlight uploads)
# FASTLANE_SKIP_WAITING_FOR_BUILD_PROCESSING=true

# Optional: Disable automatic screenshots
# FASTLANE_SKIP_SCREENSHOTS=true

# Optional: Language settings
# FASTLANE_LANGUAGE="en-US"
